module prefabs
using flecs.components.*

const NozzleFlashSize = 0.2
const NozzleFlashDecay = 0.001
const NozzleFlashLifespan = 0.1

prefab NozzleFlash : Particle {
  Rgb: {1.0, 0.5, 0.3}
  Emissive: {5.0}
  Box: {$NozzleFlashSize, $NozzleFlashSize, $NozzleFlashSize}
  #0.Particle: {
    size_decay: $NozzleFlashDecay,
    color_decay: 1.0,
    velocity_decay: 1.0,
    lifespan: $NozzleFlashLifespan
  }
}
